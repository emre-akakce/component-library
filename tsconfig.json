{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "jsx": "react",
        "rootDir": "./src",
        "outDir": "./dist",
        "declaration": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strict": true,
        "allowImportingTsExtensions": true,
        "noEmit": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}